# =======================================
# Pelaris.id Backend Environment Variables
# =======================================
# Copy this file to .env and fill in your values

# ----------------
# Server
# ----------------
NODE_ENV=development
PORT=5100

# ----------------
# Database (Required)
# ----------------
DATABASE_URL=postgresql://username:password@localhost:5432/pelaris?schema=public

# ----------------
# JWT (Required)
# ----------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ----------------
# CORS
# ----------------
CORS_ORIGINS=http://localhost:3100,http://localhost:4000
PRODUCTION_DOMAIN=pelaris.id

# ----------------
# Redis (Optional)
# ----------------
# REDIS_URL=redis://localhost:6379

# ----------------
# Logging
# ----------------
LOG_LEVEL=info

# ----------------
# Sentry (Optional)
# ----------------
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENABLED=false

# ----------------
# Backup
# ----------------
BACKUP_RETENTION_DAYS=7

# ----------------
# Business Rules
# ----------------
RETURN_DEADLINE_DAYS=7

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=10
